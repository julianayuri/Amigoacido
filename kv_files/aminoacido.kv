# -*- coding: utf-8 -*-

<Label>:
	#font_name: "Font/huxtable.ttf"
    font_name: "Font/Acme/Acme-Regular.ttf"

<BoardAminoacido>:
	FloatLayout:
		canvas.before:
			Color:
				# Cor do fundo principal
				rgba: rgba("#90e9e3")
			Rectangle:
				pos: self.pos
				size: self.size
		
		#Grid dos aminoacidos
		GridLayout:
			id: grid
			cols: 4
			size_hint: (0.9, 0.8) 
			pos_hint: {'x': 0.05, 'y': 0.1}
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				Rectangle:
					source: 'Image/Buttons/fundo_branco.png'
					pos: self.pos
					size: self.size
		
		#Barra de estabilidade
		GridLayout:
			id: conj_estabilidade
			cols: 1
			size_hint: (1, 0.05) 
			pos_hint: {'x': 0, 'y': 0.95}
			canvas.before:
				Color:
					rgba: rgba("#FF4C66")
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				id: estabilidade
				text: 'Estabilidade: {}%'.format(int(pb.value))
			RelativeLayout:
				ProgressBar:
					id: pb
					max: 100
					#value: 25
					size_hint_x: None
					width: root.width*0.5
					pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		GridLayout:
			id: conj_moedas
			qtd: 4
			cols: 2
			size_hint: (.18, 0.03) 
			pos_hint: {'center_x': 0.5, 'y': 0.92}
			canvas.before:
				Color:
					rgba: rgba("#FF4C66")
				Rectangle:
					pos: self.pos
					size: self.size
			Image:
				size_hint_x: None
				width: root.width*0.04
				source: 'Image/energia.png'
			RelativeLayout:
				Label:
					id: moedas_total
					text: '{}'.format(int(conj_moedas.qtd), ',d')
					size_hint_x: None
					font_size: root.width*0.05
					size: self.texture_size
					color: [1,1,1,1]
					pos_hint: {'center_x': 0.5, 'center_y': 0.5}

				
		#Barra inferior com os botões
		GridLayout:
			cols: 3
			size_hint: (0.9, 0.05) 
			pos_hint: {'x': 0.05, 'y': 0.025}
					
			Button:
				size_hint_y: 0.02
				size_hint_x: 0.02
				text: "Ribossomo"
				background_normal: ''
				background_color: rgba("#FF4C66")
				on_press: root.open_fabrica()
			Button:
				size_hint_y: 0.02
				size_hint_x: 0.02
				text: "Loja"
				background_normal: ''
				background_color: rgba("#FF4C66")
				on_press: root.open_loja()
				
			Button:
				size_hint_y: 0.02
				size_hint_x: 0.02
				text: "Configurações"
				background_normal: ''
				background_color: rgba("#FF4C66")
				on_press: root.open_configuracao()


<Aminoacido>:
	id: aminoacido
	
	GridLayout:
		cols: 1
		
		RelativeLayout:
			ImageButton:
				id: image
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				allow_stretch: True
				size_hint_y: None
				height: root.height*0.7
				on_press: root.animate(image.x, image.y)
				price: root.aa_price
				moedas: root.moedas_s
				qtd: root.aa_qtd
				source: root.img_src
		
		Label:
			id: label_name
			#size_hint_x: None
			size_hint_y: None
			font_size: root.width*0.15
			size: self.texture_size
			color: [0,0,0,1]
			text: root.aa_name
			
	Label:
		id: label_animate
		text: ''
		size_hint_y: None
		font_size: root.width*0.2
		size: self.texture_size
	
<Tutorial>:
	title: ''
	separator_color: [1,1,1,0] 
	#size_hint: (0.8, 0.7)
	background: root.back
	on_touch_down: root.change()
	